body
  margin: 0

$position = left

#sidebar
  float: $position
  margin-$position: 20px

$support-old-ie = false

li
  @if $support-old-ie
    display: inline
  float: left
  margin-left: 10px

@for $i in 1..3
  .span-$i
    width: $i * 60px

$button = @mixin $color, $bg-color
  display: inline-block
  color: $color
  background-color: $bg-color

.submit
  $button(black, white)

.reset
  $button(red, white)

.button
  display: inline-block
  color: black
  background-color: white

.submit
  @extend .button

.reset
  @extend .button
  color: red

@keyframes become-round
  from
    border-radius: 0
  to
    border-radius: 50%
